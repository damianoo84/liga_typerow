{% extends 'base.html.twig' %}

{% block content %}
    <div class="forum_list_of_comments">
        {% for comment in comments %}
            {% if loop.index % 2 %}
                <p class="new_comment_left">{{ comment.text }}  ---  {{ comment.username }}</p>
            {% else %}
                <p class="new_comment_right">{{ comment.text }}  ---  {{ comment.username }}</p>  
            {% endif %}
        {% endfor %}
    </div>
    
    <script type="text/javascript">
    $(function(){
       $("#form").submit(function(e){
            var form=$(this);
            $.ajax({
                url:"{{ path('liga_typerow_forum') }}",
                dataType:"JSON",
                type:"POST",
                data:form.serialize(),
                success:function(){
                    form.get(0).reset();
                    console.log("jest ok");
                },
                error: function() {
                    console.log("Wystąpił błąd");
                }
            });
            e.preventDefault();
        });
    }); 
    
</script>
        
{% endblock %}

{% block infobar %}
    <div class="forum_comment">
        <form id="form">
            <input type="hidden" name="season_id" value="{{ matchday.season_id }}" /> 
            <input type="text" name="user_comment" class="input_comment" />
            <input type="submit"  value="Wyślij"/>
        </form>
    </div>
{% endblock %}
    
