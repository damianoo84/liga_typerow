{% extends 'base.html.twig' %}

{% block content %}
    <table>
        {% for key,point in points %}
            <tr>
                {% set sum = 0 %}
                    <td>{{ loop.index }}.{{ point.username }}</td>
                {% for pt in point.suma %}
                    {% if loop.index % 2 %}
                        <td>{{ pt }}</td>
                    {% else %}
                        <td>{{ pt }}</td>
                    {% endif %}
                        {% set sum = sum + pt %}
                    {% endfor %}
                <td>{{ sum }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}