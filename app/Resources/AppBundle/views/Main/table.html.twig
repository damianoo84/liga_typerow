{% extends 'base.html.twig' %}

{% block content %}
    <table class="tab_types">
      <tr>
        <th></th>
        <th>Gracz</th>
        {% for i in 0..14 %}
        <th class="th_table_pkt">{{loop.index}}</th>
        {% endfor %}
        <th class="th_table_sum">Suma</th>
      </tr>
        {% for key,point in points %}
            <tr>
                <td class="table_loop">{{ loop.index }}.</td>
                {% set sum = 0 %}
                    <td class="table_username">{{ point.username }}</td>
                {% for pt in point.suma %}
                    {% if loop.index % 2 %}
                        <td class="table_pkt">
                            {% if curr_matchday().name == loop.index %}
                                {{ pt == 0 ? '' : pt }}
                            {% else %}
                                {{ pt }}
                            {% endif %}
                        </td>
                    {% else %}
                        <td class="table_pkt">
                            {% if curr_matchday().name == loop.index %}
                                {{ pt == 0 ? '' : pt }}
                            {% else %}
                                {{ pt }}
                            {% endif %}
                        </td>
                    {% endif %}
                    {% set sum = sum + pt %}
                {% endfor %}
                {% if point.suma|length < 14 %}
                    {% for i in 0..(14-point.suma|length) %}
                        <td class="table_pkt"></td>
                    {% endfor %}
                {% endif %}
                <td class="table_sum">{{ sum }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}