{% extends 'base.html.twig' %}

{% block content %}

    <div style="background-color:white;width:60em;height:15em;float:left;padding:0;margin:0;">
        {% for key,point in points %}
            {% set sum = 0 %}
            <div style="background-color:white;width:8em;height:2em;float:left;padding:0;margin:0;">
                {{ loop.index }}.{{ point.username }}
            </div>
            <div style="background-color:grey;width:52em;height:2em;float:left;padding:0;margin:0;">
                <div style="background-color:grey;width:48em;height:2em;float:left;padding:0;margin:0;">
                    {% for pt in point.suma %}
                        {% if loop.index % 2 %}
                            <div style="background-color:grey;width:2em;height:2em;float:left;padding:0;margin:0;">
                                {{ pt }}
                            </div>
                        {% else %}
                            <div style="background-color:white;width:2em;height:2em;float:left;padding:0;margin:0;">
                                {{ pt }}
                            </div>
                        {% endif %}
                            {% set sum = sum + pt %}
                    {% endfor %}
                </div>
                <div style="background-color:white;width:4em;height:2em;float:left;padding:0;margin:0;">
                    {{ sum }}
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}  