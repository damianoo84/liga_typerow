{% extends 'base.html.twig' %}

{% block content %}
    
    {# Jeśli użytkownik wytypował to wyświetl tylko typy użytkownika #}
    {% if (is_typed(curr_matchday().id, app.user.id)) == true %}
        <table class="tab_types">
            <tr class="col_name">
                <th>Opis</th>
                <th>Gospodarz</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Gość</th>
                <th>Termin</th>
            </tr>
            {% for key,type in types %}
            <tr class="big_screen">          
                <td class="league">{{ type.name }}</td>
                <td class="team_name">{{ type.host }}</td>
                <td class="team_name_short">{{ type.hostShort }}</td>
                <td class="user_type">{{ type.hostType }}</td>
                <td class="gap">-</td>
                <td class="user_type">{{ type.guestType }}</td>
                <td class="team_name">{{ type.guest }}</td>
                <td class="team_name_short">{{ type.guestShort }}</td>
                <td class="term">{{ type.term }}</td>
            </tr>
            {% endfor %}
        </table>
    {# w innym przypadku wyświetl formularz do wypełnienia #} 
    {% else %}
        <form id="form">
        <table class="tab_types">
            <tr class="col_name">
                <th>Opis</th>
                <th>Gospodarz</th>
                <th></th>
                <th></th>
                <th></th>
                <th>Gość</th>
                <th>Termin</th>
            </tr>
            {% for key,meet in meets %}
            <input type="hidden" name="meet_id[]" value="{{ meet.meet_id }}" />  
            <tr class="big_screen">
                <td class="league">{{ meet.league }}</td>
                <td class="team_name">{{ meet.host }}</td>
                <td class="team_name_short">{{ meet.hostShort }}</td>
                <td class="user_type">
                    <input type="text" class="tp" name="hostType[]" maxlength='1' />
                </td>
                <td class="gap">-</td>
                <td class="user_type">
                    <input type="text" class="tp" name="guestType[]" maxlength='1' />
                </td>
                <td class="team_name">{{ meet.guest }}</td>
                <td class="team_name_short">{{ meet.guestShort }}</td>
                <td class="term">{{ meet.term }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td><input type="submit"  value="Wyślij"/></td>
            </tr>
        </table>
        </form>
    {% endif %}
                 
        <script type="text/javascript">
            $(function(){
               $("#form").submit(function(e){
                    var form=$(this);
                    $.ajax({
                        url:"{{ path('liga_typerow_types') }}",
                        dataType:"JSON",
                        type:"POST",
                        data:form.serialize(),
                        success:function(){
                            form.get(0).reset();
                            console.log("jest ok");
                            location.reload();
                        },
                        error: function() {
                            console.log("Wystąpił błąd");
                        }
                    });
                    e.preventDefault();
                });
            });
        </script>
{% endblock %}