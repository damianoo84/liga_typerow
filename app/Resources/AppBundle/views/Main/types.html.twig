{% extends 'base.html.twig' %}

{% block content %}
<p>Witaj {{ app.user ? app.user.username }} </p>

<form id="form">
    <div class="coupon_form">
        {% for key,meet in meets %}
            <input type="hidden" name="meet_id[]" value="{{ meet.meet_id }}">
            <div class="coupon_form_desc">
                {{ meet.description }}
            </div>
            <div class="coupon_form_host">
                {{ meet.host }}
            </div>
            <div class="coupon_form_host_type">
               <input type="text" name="hostType[]" maxlength='1'>
            </div>
            <div class="coupon_form_dash">-</div>
            <div class="coupon_form_guest_type">
                <input type="text" name="guestType[]" maxlength='1'>
            </div> 
            <div class="coupon_form_guest">
                {{ meet.guest }}
            </div>
            <div class="coupon_form_term">
                {{ meet.term }}
            </div>
        {% endfor %}
   </div>
   <input type="submit"  value="Wyślij"/>
</form>
 
<script type="text/javascript">
    
    $(function(){
       $("#form").submit(function(e){
            var form=$(this);
            $.ajax({
                url:"{{ path('liga_typerow_types') }}",
                dataType:"JSON",
                type:"POST",
                data:form.serialize(),
                success:function(){
                    form.get(0).reset();
                    console.log("jest ok");
                },
                error: function() {
                    console.log("Wystąpił błąd");
                }
            });
            e.preventDefault();
        });
    }); 
    
</script>
        
{% endblock %}