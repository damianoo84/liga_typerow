{% extends 'base.html.twig' %}

{% block content %}

    <p>Username: {{ app.user ? app.user.username }} </p>
    
    <div style="background-color:white;width:65em;height:20em;float:left;padding:0;margin:0;">
        {% for key,type in types %}
        
        <div style="background-color:white;width:65em;height:2em;float:left;padding:0;margin:0;">
            <div style="background-color:white;width:35em;height:2em;float:left;padding:0;margin:0;">
                {{ type.match }}
            </div>
            
            <div style="background-color:white;width:30em;height:2em;float:left;padding:0;margin:0;">
                {% for tp in type.types %}
                    {% if loop.index % 2 %}
                        <div style="background-color:grey;width:3em;height:2em;float:left;padding:0;margin:0;">
                            {{ tp }}
                        </div>
                    {% else %}
                        <div style="background-color:white;width:3em;height:2em;float:left;padding:0;margin:0;">
                            {{ tp }}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
    
{% endblock %}  