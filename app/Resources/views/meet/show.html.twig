{% extends 'base.html.twig' %}

{% block body %}
    <h1>Meet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ meet.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ meet.name }}</td>
            </tr>
            <tr>
                <th>Hostgoals</th>
                <td>{{ meet.hostGoals }}</td>
            </tr>
            <tr>
                <th>Guestgoals</th>
                <td>{{ meet.guestGoals }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ meet.description }}</td>
            </tr>
            <tr>
                <th>Term</th>
                <td>{{ meet.term }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ meet.position }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if meet.createdAt %}{{ meet.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if meet.updatedAt %}{{ meet.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('meet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('meet_edit', { 'id': meet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
