{% extends 'base.html.twig' %}

{% block content %}
    <h1>Statistic</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statistic.id }}</td>
            </tr>
            <tr>
                <th>Match2</th>
                <td>{{ statistic.match2 }}</td>
            </tr>
            <tr>
                <th>Match4</th>
                <td>{{ statistic.match4 }}</td>
            </tr>
            <tr>
                <th>Totalpoints</th>
                <td>{{ statistic.totalPoints }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ statistic.position }}</td>
            </tr>
            <tr>
                <th>Numofque</th>
                <td>{{ statistic.numOfQue }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if statistic.createdAt %}{{ statistic.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if statistic.updatedAt %}{{ statistic.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_statistic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('statistic_edit', { 'id': statistic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
