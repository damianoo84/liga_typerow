{% extends 'base.html.twig' %}

{% block content %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Plainpassword</th>
                <th>Shortname</th>
                <th>Numberofwins</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Lastactivityat</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Accountnonexpired</th>
                <th>Accountnonlocked</th>
                <th>Credentialsnonexpired</th>
                <th>Enabled</th>
                <th>Roles</th>
                <th>Actiontoken</th>
                <th>Registerdate</th>
                <th>Avatar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.plainPassword }}</td>
                <td>{{ user.shortname }}</td>
                <td>{{ user.numberOfWins }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.priority }}</td>
                <td>{% if user.lastActivityAt %}{{ user.lastActivityAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.createdAt %}{{ user.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if user.accountNonExpired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.accountNonLocked %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.credentialsNonExpired %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.enabled %}Yes{% else %}No{% endif %}</td>
                <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
                <td>{{ user.actionToken }}</td>
                <td>{% if user.registerDate %}{{ user.registerDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ user.avatar }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
