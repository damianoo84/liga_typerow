{% extends 'base.html.twig' %}

{% block content %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Plainpassword</th>
                <td>{{ user.plainPassword }}</td>
            </tr>
            <tr>
                <th>Shortname</th>
                <td>{{ user.shortname }}</td>
            </tr>
            <tr>
                <th>Numberofwins</th>
                <td>{{ user.numberOfWins }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ user.status }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ user.priority }}</td>
            </tr>
            <tr>
                <th>Lastactivityat</th>
                <td>{% if user.lastActivityAt %}{{ user.lastActivityAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if user.createdAt %}{{ user.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if user.updatedAt %}{{ user.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Accountnonexpired</th>
                <td>{% if user.accountNonExpired %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Accountnonlocked</th>
                <td>{% if user.accountNonLocked %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Credentialsnonexpired</th>
                <td>{% if user.credentialsNonExpired %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{% if user.enabled %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Actiontoken</th>
                <td>{{ user.actionToken }}</td>
            </tr>
            <tr>
                <th>Registerdate</th>
                <td>{% if user.registerDate %}{{ user.registerDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ user.avatar }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
